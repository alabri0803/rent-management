# =============================================================================
# RENT MANAGEMENT SYSTEM - Environment Variables
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# Never commit .env file to git!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# SECRET_KEY: Generate a new one using: python -c "import secrets; print(secrets.token_urlsafe(50))"
# NEVER use the default value in production!
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_MINIMUM_50_CHARACTERS

# DEBUG: Set to False in production
DEBUG=False

# ALLOWED_HOSTS: Comma-separated list of allowed hostnames
# Development: localhost,127.0.0.1
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Settings (MySQL)
# -----------------------------------------------------------------------------

DB_NAME=rent_management
DB_USER=your_database_user
DB_PASSWORD=your_strong_database_password_here
DB_HOST=localhost
DB_PORT=3306

# -----------------------------------------------------------------------------
# Email Settings (Optional - for notifications)
# -----------------------------------------------------------------------------

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# -----------------------------------------------------------------------------
# Security Settings (Optional)
# -----------------------------------------------------------------------------

# IP Whitelist (Optional)
IP_WHITELIST_ENABLED=False

# Session Security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=False

# -----------------------------------------------------------------------------
# SMS/WhatsApp Settings (Optional - uncomment if using)
# -----------------------------------------------------------------------------

# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# Redis Cache Settings (Optional - for production)
# -----------------------------------------------------------------------------

# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# File Upload Settings
# -----------------------------------------------------------------------------

# Maximum file upload size in MB
MAX_UPLOAD_SIZE=10
