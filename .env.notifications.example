# ==================== Notification System Configuration ====================
# نظام الإشعارات الشامل - إعدادات المزودين الخارجيين

# ==================== Email Configuration (SMTP) ====================
# إعدادات البريد الإلكتروني
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Rent Management <noreply@rentmanagement.com>

# ==================== SMS Configuration ====================
# اختيار مزود SMS: twilio أو aws_sns
SMS_PROVIDER=twilio

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS Configuration (بديل لـ Twilio)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SNS_REGION=us-east-1

# ==================== WhatsApp Configuration ====================
# اختيار مزود WhatsApp: twilio أو business_api
WHATSAPP_PROVIDER=twilio

# Twilio WhatsApp Configuration
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# WhatsApp Business API Configuration (بديل لـ Twilio)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# ==================== Push Notifications Configuration ====================
# Firebase Cloud Messaging (FCM)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# ==================== Notification Settings ====================
# تفعيل/تعطيل القنوات
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_WHATSAPP_NOTIFICATIONS=False
ENABLE_PUSH_NOTIFICATIONS=False

# إعدادات عامة
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=300  # seconds
NOTIFICATION_BATCH_SIZE=100

# وقت الهدوء الافتراضي (24-hour format)
DEFAULT_QUIET_HOURS_START=22:00
DEFAULT_QUIET_HOURS_END=08:00

# ==================== Cost Tracking ====================
# تتبع تكاليف الإشعارات
TRACK_NOTIFICATION_COSTS=True
SMS_COST_PER_MESSAGE=0.05  # USD
WHATSAPP_COST_PER_MESSAGE=0.01  # USD

# ==================== Rate Limiting ====================
# حدود الإرسال لمنع الإساءة
MAX_SMS_PER_USER_PER_DAY=10
MAX_WHATSAPP_PER_USER_PER_DAY=20
MAX_EMAIL_PER_USER_PER_DAY=50

# ==================== Testing ====================
# وضع الاختبار (لا يتم إرسال إشعارات حقيقية)
NOTIFICATION_TEST_MODE=False
NOTIFICATION_TEST_RECIPIENT=test@example.com
NOTIFICATION_TEST_PHONE=+96812345678
